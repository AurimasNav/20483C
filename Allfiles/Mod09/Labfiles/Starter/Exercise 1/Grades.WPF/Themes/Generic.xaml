    <!--  FlipControl  -->
    <Style TargetType="local:FlipControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:FlipControl">
                    <Border>
                        <Grid
                            x:Name="PART_MainGrid"
                            Background="Transparent"
                            RenderTransformOrigin="0.5,0.5">
                            <Grid.RenderTransform>
                                <ScaleTransform x:Name="scale" />
                            </Grid.RenderTransform>
                            <Border
                                x:Name="brd1"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                                <ContentPresenter Content="{TemplateBinding FrontContent}" />
                            </Border>
                            <Border
                                x:Name="brd2"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                RenderTransformOrigin="0.5,0.5"
                                Visibility="Collapsed">
                                <Border.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform x:Name="PART_BackScale" ScaleX="-1" />
                                    </TransformGroup>
                                </Border.RenderTransform>
                                <ContentPresenter Content="{TemplateBinding BackContent}" />
                            </Border>
                        </Grid>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="VisualStateGroup">
                                <VisualState x:Name="FlipToBack">
                                    <Storyboard>
                                        <DoubleAnimationUsingKeyFrames
                                            BeginTime="00:00:00"
                                            Storyboard.TargetName="scale"
                                            Storyboard.TargetProperty="ScaleX">
                                            <EasingDoubleKeyFrame KeyTime="00:00:00.3000000" Value="1" />
                                            <EasingDoubleKeyFrame KeyTime="00:00:00.6000000" Value="-1" />
                                        </DoubleAnimationUsingKeyFrames>

                                        <ObjectAnimationUsingKeyFrames
                                            BeginTime="00:00:00.3"
                                            Storyboard.TargetName="brd1"
                                            Storyboard.TargetProperty="(UIElement.Visibility)"
                                            Duration="0:0:0">
                                            <DiscreteObjectKeyFrame KeyTime="00:00:00">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <Visibility>Collapsed</Visibility>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>

                                        <ObjectAnimationUsingKeyFrames
                                            BeginTime="00:00:00.3"
                                            Storyboard.TargetName="brd2"
                                            Storyboard.TargetProperty="(UIElement.Visibility)"
                                            Duration="0:0:0">
                                            <DiscreteObjectKeyFrame KeyTime="00:00:00">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <Visibility>Visible</Visibility>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="FlipToFront">
                                    <Storyboard>
                                        <DoubleAnimationUsingKeyFrames
                                            BeginTime="00:00:00"
                                            Storyboard.TargetName="scale"
                                            Storyboard.TargetProperty="ScaleX">
                                            <EasingDoubleKeyFrame KeyTime="00:00:00.3000000" Value="-1" />
                                            <EasingDoubleKeyFrame KeyTime="00:00:00.6000000" Value="1" />
                                        </DoubleAnimationUsingKeyFrames>

                                        <ObjectAnimationUsingKeyFrames
                                            BeginTime="00:00:00.3"
                                            Storyboard.TargetName="brd1"
                                            Storyboard.TargetProperty="(UIElement.Visibility)"
                                            Duration="0:0:0">
                                            <DiscreteObjectKeyFrame KeyTime="00:00:00">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <Visibility>Visible</Visibility>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>

                                        <ObjectAnimationUsingKeyFrames
                                            BeginTime="00:00:00.3"
                                            Storyboard.TargetName="brd2"
                                            Storyboard.TargetProperty="(UIElement.Visibility)"
                                            Duration="0:0:0">
                                            <DiscreteObjectKeyFrame KeyTime="00:00:00">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <Visibility>Collapsed</Visibility>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>

                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

